{
  "manifest_version": 2,
  "name": "ColorCue",
  "version": "1.0",
  "description": "A cross-browser browser extension that adjusts web pages to be more color-blind friendly.",
  "homepage_url": "https://github.com/johnhoffm/ColorCue",
  "icons": {
    "48": "icons/logo-48.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    ["*://*/*"]
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["colorcue.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://enchroma.com/pages/get-result*"],
      "js": ["colorblind_result.js"]
    },
    {
      "matches": ["https://enchroma.com/pages/superx*"],
      "js": ["normal_result.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/logo-32.png",
    "default_title": "ColorCue",
    "default_popup": "popup/popup.html"
  }
}